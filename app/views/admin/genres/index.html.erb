<%= form_with model: @genre, url:admin_genres_path, local: true do |genre| %>
	<p>ジャンル名</p>
	<%= genre.text_field :name %>
	<%= genre.radio_button :is_active, true %>
	<%= genre.label "有効", {value: :true, style: "display: inline-block;"}, checked: true %>
	<%= genre.radio_button :is_active, false %>
	<%= genre.label "無効", {value: :false, style: "display: inline-block;"} %>
	<%= genre.submit "登録" %>
<% end %>

<table class = "table table-striped">
	<thead>
	<tr>
		<th>ジャンル名</th>
		<th>ステータス</th>
	</tr>
	</thead>

	<tbody>
	<% @genres.each do |genre| %>
		<tr>
			<td><%= genre.name %></td>
			<td><% if genre.is_active == true %>
				<p>有効</p>
			<% else %>
				<p>無効</p>
			<% end %></td>
			<td><%= link_to '編集', edit_admin_genre_path(genre) %></td>
		</tr>
	<% end %>
	</tbody>
</table>


