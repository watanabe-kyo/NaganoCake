<div class = "container">

<h1>商品一覧</h1>


<table class = "table table-striped">
	<thead>
		<tr>
			<th>商品画像</th>
			<th>商品名</th>
			<th>商品説明</th>
			<th>ジャンル</th>
			<th>商品価格</th>
			<th>販売ステータス</th>
			<th><%= link_to '+', new_admin_item_path %></th>
		</tr>
	</thead>
	<% @items.each do |item| %>
	<tbody>
		<tr>
			<td><%= attachment_image_tag item, :image, :fill, 60, 60, fallback: "No_image.jpg" %></td>
			<td><%= item.name %></td>
			<td><%= item.introduction %></td>
			<td>
			<% if item.genre_id == 1 %>
				<p>プリン</p>
			<% elsif item.genre_id == 2 %>
				<p>焼き菓子</p>
			<% elsif item.genre_id == 3 %>
				<p>ケーキ</p>
			<% else %>
				<p>キャンディ</p>
			<% end %></td>
			<td><%= item.price %></td>
			<td><% if item.is_active == true %>
					<p>販売中</p>
				<% else %>
					<p>売切れ</p>
				<% end %></td>
		</tr>
	</tbody>
	<% end %>
</table>
</div>
