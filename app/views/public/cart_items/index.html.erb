<div class="container">
<h1>エンドユーザー＃カート内商品一覧</h1>

<% @carts.each do |cart| %>
	<%= attachment_image_tag cart.item, :image, :fill, 150, 100, fallback: "No_image.jpg" %>
	<%= cart.item.name %>
	<%= cart.item.price %>
	<%= form_for(cart) do |item| %>
		<%= item.select :amount, (1..100) %>
		<%= item.submit "編集" %>
	<% end %>
	<%= cart.item.price * cart.amount %><br>
	<%= link_to "削除", cart_item_path(cart), method: :delete, "data-confirm" => "この商品を消しますか？" %><br>
<% end %>
<%= link_to "カートを空にする", destroy_all_path, method: :delete, "data-confirm" => "カートを空にしますか？" %>
<%= link_to "買い物を続ける", items_path %>
<%= link_to "情報入力に進む", new_order_path %>
</div>