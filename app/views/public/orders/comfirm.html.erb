<div class="container">
	<div class="row">
		<div class="col-xs-9">
			<table class = "table">
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価（税込）</th>
						<th>数量</th>
						<th>小計</th>
					</tr>
				</thead>
				<tbody>


				<%= form_with model: @order, url: orders_path, method: :post,local: true do |order| %>
					<% @carts.each do |cart| %>
						<tr>
								<td><%= attachment_image_tag cart.item, :image, :fill, 150, 100, fallback: "No_image.jpg", class:"check-item" %>
								<%= cart.item.name %></td>
								<td><%= cart.item.price %></td>
								<td><%= cart.amount %></td>
								<td><%= cart.item.price * cart.amount %></td>
						</tr>

						<%= order.hidden_field :price, :value => cart.item.price %>
						<%= order.hidden_field :amount, :value => cart.amount %>
						<%= order.hidden_field :name, :value => @order.name %>
						<%= order.hidden_field :address, :value => @order.address %>
						<%= order.hidden_field :postal_code, :value => @order.postal_code %>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-xs-3">
			<table class = "table table-striped">
				<div class="check-payment">
					<tr>
						<th>送料</th>
						<td><%= @order.shipping_cost %></td>
					</tr>
					<tr>
						<th>商品合計</th>
						<td><%= @order.total_payment %></td>
					</tr>
					<tr>
						<th>請求金額</th>
						<td><%= @order.shipping_cost + @order.total_payment %></td>
					</tr>
				</div>
			</table>
		</div>
	</div>
</div>
<div class="container">
<table class="table">
	<tr>
		<th>支払方法</th>
		<td><%= @order.payment_method %></td>
	</tr>
	<tr>
		<th>お届け先</th>
		<td><%= @order.postal_code %><%= @order.address %>
		<%= @order.name %></td>
	</tr>
</table>

					<%= order.submit %>
				<% end %>

</div>
