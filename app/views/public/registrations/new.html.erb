<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "性" %>
  </div>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "名" %>
  </div>
  <div class="field">
    <%= f.label :last_name_kana %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "セイ" %>
  </div>
  <div class="field">
    <%= f.label :first_name_kana %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "メイ" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :postal_code %>
    <%= f.number_field :postal_code, autofocus: true, autocomplete: "郵便番号" %>
  </div>
  <div class="field">
    <%= f.label :address %>
    <%= f.text_area :address, autofocus: true, autocomplete: "住所" %>
  </div>
  <div class="field">
    <%= f.label :telephone_number %>
    <%= f.number_field :telephone_number, autofocus: true, autocomplete: "電話番号" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
